@model MovieTicket.Models.BookingViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Buy Ticket</title>
</head>
<body>
    <h1>Buy Ticket</h1>
    <form method="post">
        <div>
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" value="@Model.FirstName" required>
        </div>
        <div>
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" value="@Model.LastName" required>
        </div>
        <div>
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" value="@Model.Age" required>
        </div>
        <div>
            <label for="movieType">Type of Movie:</label>
            <input type="text" id="movieType" name="movieType" value="@Model.MovieType" required>
        </div>
        <div>
            <label for="time">Time:</label>
            <input type="text" id="time" name="time" value="@Model.Time" required>
        </div>
        <div>
            <label for="seat">Seat:</label>
            <input type="text" id="seat" name="seat" value="@Model.Seat" required>
        </div>
        <div>
            <button type="submit">Buy Ticket</button>
        </div>
    </form>
</body>
</html>
