@model MovieTicket.Models.Booking

<!DOCTYPE html>
<html>
<head>
    <title>Delete Ticket</title>
</head>
<body>
    <h1>Delete Ticket</h1>
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <p>Are you sure you want to delete this ticket?</p>
        <div>
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" value="@Model.FirstName" readonly>
        </div>
        <div>
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" value="@Model.LastName" readonly>
        </div>
        <div>
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" value="@Model.Age" readonly>
        </div>
        <div>
            <label for="movieType">Type of Movie:</label>
            <input type="text" id="movieType" name="movieType" value="@Model.MovieType" readonly>
        </div>
        <div>
            <label for="time">Time:</label>
            <input type="text" id="time" name="time" value="@Model.Time" readonly>
        </div>
        <div>
            <label for="seat">Seat:</label>
            <input type="text" id="seat" name="seat" value="@Model.Seat" readonly>
        </div>
        <div>
            <button type="submit">Confirm Delete</button>
        </div>
    </form>
</body>
</html>
